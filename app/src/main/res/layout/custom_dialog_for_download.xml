<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="17dp"
    >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/download_file_name_edittext"
        android:textSize="14sp"
        android:maxLines="3"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/filesize"
        android:layout_below="@id/download_file_name_edittext"
        android:textSize="10sp"
        android:textColor="#851111"
        android:text="1024MB"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/filesize"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:text="https"
        android:id="@+id/http_name_textview"
        android:textSize="13sp"
        android:singleLine="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#706D6D"
        android:layout_below="@id/http_name_textview"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/no_button"
        android:layout_below="@id/http_name_textview"
        android:layout_marginTop="5dp"
        android:text="Cancel"
        android:drawableStart="@drawable/baseline_cancel_24"
        android:paddingStart="10dp"
        android:padding="5dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/yes_button"
        android:layout_below="@id/no_button"

        android:layout_marginTop="5dp"
        android:text="Download"
        android:drawableStart="@drawable/baseline_cloud_download_24"
        android:paddingStart="10dp"
        android:padding="5dp"
        />



</RelativeLayout>